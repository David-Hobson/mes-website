<% include ./partials/header %>

<link rel="stylesheet" type="text/css" href="/stylesheets/showteam.css">

<div class="container-fluid traditions-container">
    <div class="row redsuits p-5">
        <div class="col-xl-6 col-6">
            <h1><%= team.name %></h1>
            <hr class="hr-primary">
            <p><strong><i class="fas fa-crown"></i> Leader:</strong> <%= team.leader %></p>
            <p><strong><i class="far fa-envelope"></i> Email:</strong> <%= team.email %></p>
            <p><strong><i class="fas fa-tag"></i> Type:</strong> <%= team.type %></p>
            <p><strong><i class="fas fa-calendar"></i> Established:</strong> <%= team.dateEstablished.toDateString() %></p>
            <p><strong><i class="fas fa-users"></i> Members:</strong> <%= team.numberOfMembers %></p>
            <br>
            <h4>About</h4>
            <hr>
            <p><%= team.description %></p>
            <div>
                <% for(let i = 0; i < team.socialMedia.length; i++) { %>
                    <a href="<%= team.socialMedia[i][1] %>" class="card-text mr-1"><i class="fab fa-<%= team.socialMedia[i][0] %> fa-2x"></i></a>
                <% } %>
            </div>
        </div>
        <div class="col-xl-6 col-6 pt-2">
            <img class="main-image" src="<%= team.mainImage %>">
        </div>  
    </div>
    <div class="row image-carousel">
        <div class="col-xl-2"></div>
        <div class="col-xl-8 p-5">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="d-block w-100" src="<%= team.carouselImages[0] %>" alt="First Slide">
                </div>
                <% for(let i = 1; i < team.carouselImages.length; i++) { %>
                <div class="carousel-item">
                  <img class="d-block w-100" src="<%= team.carouselImages[i] %>" alt="Second Slide">
                </div>
                <% } %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
        </div>
        <div class="col-xl-2"></div>
    </div>
</div>

<% include ./partials/footer %>
