<% include ./partials/header %>

<link rel="stylesheet" type="text/css" href="/stylesheets/new.css">

<div class="container text-center new-post">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Edit Post</h1>
                    <hr class="hr-secondary"></hr>
                    <form action="/posts/<%= post._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" value="<%= post.title %>">
                        </div>              
                        <div class="form-group">
                            <input type="text" class="form-control" name="author" value="<%= post.author %>">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="position" value="<%= post.position %>">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" rows="5" name="content"><%= post.content %></textarea>
                        </div>
                        <div class="form-group">
                            <input type="file" class="form-control-file" name="image">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-md">Edit Post</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>