<% include ./partials/header %>

<link rel="stylesheet" type="text/css" href="/stylesheets/new.css">

<div class="container  new-post">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center">Create Minutes Entry</h1>
                    <hr class="hr-secondary">
                    <form action="/minutes" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <select name="section" class="form-control">
                                <% minutes.forEach(function(minute){ %>
                                    <option value="<%= minute.section %>"><%= minute.section %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="type" placeholder="Type" required>
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-control" name="date" placeholder="Type" required>
                        </div>
                        <div class="form-group">
                            <label for="agenda-file">Agenda File</label>
                            <input id="agenda-file" type="file" class="form-control-file" accept=".pdf" name="agenda" required>
                        </div>
                        <div class="form-group">
                            <label for="minutes-file">Minutes File</label>
                            <input id="minutes-file" type="file" class="form-control-file" accept=".pdf" name="minutes" required>
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary btn-md ">Add Minute Entry</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>