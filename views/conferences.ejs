<% include ./partials/header %>


<link rel="stylesheet" type="text/css" href="/stylesheets/conferences.css">

<div class="container-fluid traditions-container">
    <div class="row text-white text-center title-card p-5">
        <div class="col-12">
            <h1 class="title">CONFERENCES</h1>
            <hr>
        </div>
    </div>

    <div class="row p-5">
        <% conferences.forEach(function(conference){ %>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-3 conference" conferenceid="<%= conference._id %>">
                <div class="card">
                    <img class="card-img-top" src="<%= conference.mainImage %>">
                    <div class="card-body">
                        <h3 class="card-title"><%= conference.name %></h3>
                        <hr class="hr-primary">
                        <p class="card-text"><%= conference.flavourText %></p>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="<%= conference._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title"><%= conference.name %> <span class="con-fullname">(<%= conference.fullName %>)</span></h2>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xl-12 col-lg-6">
                                    <img class="modal-img" src="<%= conference.mainImage %>">
                                </div>
                                <div class="col-xl-12 col-lg-6">
                                    <h6 class="modal-flavour pt-3"><em><%= conference.flavourText %></em></h6>
                                    <hr>
                                    <p><%= conference.description %></p>
                                    <p><strong><i class="fas fa-calendar-alt"></i> <%= conference.date %></strong></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

    <div class="row p-5 con-blogs">
        <div class="col-12">
            <h1>Conference Blogs</h1>
            <hr class="hr-primary">
        </div>
    </div>

</div>

<% include ./partials/footer %>

<script type="text/javascript">
    $(".conference").click(function(){
        $("#" + this.getAttribute("conferenceid")).modal("toggle");
    });
</script>