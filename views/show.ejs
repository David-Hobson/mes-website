<% include ./partials/header %>

<section class="container mt-4">
	<div class="row justify-content-center">
		<div class="col-lg-9">
			<div class="card">
				<div class="card-body">
					<h1 class="card-title"><%= post.title %></h1>
					<p class="card-subtitle text-muted">Posted by <%= post.author %> - <%= post.position %></p>
					<hr class="hr-primary">
				</div>
				<img class="card-img" src="<%= post.image %>">
				<div class="card-body">
					<p><%= post.content %></p>
					<a class="btn btn-xs btn-warning" href="/posts/<%= post._id %>/edit">Edit</a>
					<form class="deleteForm" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                    	<button class="btn btn-xs btn-danger">Delete</button>
                	</form>
				</div>
			</div>
		</div>
	</div>
</section>

<% include ./partials/footer %>
