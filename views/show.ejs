<% include ./partials/header %>

<section class="container mt-4">
	<div class="row justify-content-center">
		<div class="col-lg-9">
			<div class="card">
				<div class="card-body">
					<h1 class="card-title"><%= post.title %></h1>
					<p class="card-subtitle text-muted">Posted by <%= post.author.name %> - <%= post.author.position %></p>
					<hr class="hr-primary">
				</div>
				<img class="card-img" src="<%= post.image %>">
				<div class="card-body">
					<p style="white-space: pre-line;"><%= post.content %></p>
					<hr>
					<% if(currentUser && post.author.id.equals(currentUser._id)){ %>
					<div class="d-flex">
						<a class="mr-2 btn btn-sm btn-warning" href="/posts/<%= post._id %>/edit">Edit</a>
						<form class="deleteForm" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
	                    	<button class="btn btn-sm btn-danger">Delete</button>
	                	</form>
	                </div>
                	<% } %>

				</div>
			</div>
		</div>
	</div>
</section>

<% include ./partials/footer %>
